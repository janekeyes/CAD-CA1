<p style="color: green"><%= notice %></p>

<% content_for :title, "Items" %>

<div class="container mt-5">
  <h1>Items</h1>
  <%= link_to "New Item", new_item_path, class: "btn btn-success mb-3" %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Size</th>
        <th>Colour</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.size %></td>
          <td><%= item.colour %></td>
          <td><%= item.category.name if item.category %></td>
          <td>
            <%= link_to "Show", item, class: "btn btn-info btn-sm" %>
            <%= link_to "Edit", edit_item_path(item), class: "btn btn-warning btn-sm" %>
            <%= link_to "Delete", item, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
